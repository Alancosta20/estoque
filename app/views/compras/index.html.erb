<div class= "outer-container">
    <div class= "used-flex">
        <h1 class= "titulo-formulario">Minhas Compras</h1>
        <%=link_to "+ Nova Compra", new_compra_path, class: "botao-enviar"%>
    </div>

    <%@compras.each do |compra|%>
        <div class = "container-geral">
            <div class="used-flex">
                <h3><%=compra.data.strftime("%d/%m/%Y")%> - <%=compra.produto.nome%></h3>
                <h3><%=number_to_currency(compra.valor*compra.quantidade, :unit => "R$ ", :separator => ",", :delimiter => ".")%></h3>
            </div>
            <div class = "used-flex gap">
                <div class = "used-flex grow">
                    <span>Quantidade</span>
                    <span><%=compra.quantidade%></span>
                </div>
                
                <div class = "used-flex grow">
                    <span>Valor Unit√°rio</span>
                    <span><%=number_to_currency(compra.valor, :unit => "R$ ", :separator => ",", :delimiter => ".")%></span>
                </div>
            </div>
            <p><%=compra.descricao%></p>
        </div>
    <%end%>

</div>
