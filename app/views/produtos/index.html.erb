<div class= "outer-container">
    <div class= "used-flex">
        <h1 class= "titulo-formulario">Meus Produtos</h1>
        <%=link_to "+ Novo Produto", new_produto_path, class: "botao-enviar"%>
    </div>

    <%@produtos.each do |produto|%>
        <div>
            <h3>
               <%=produto.nome%>
            </h3>
            <%=link_to "Editar", edit_produto_path(produto) %>
            <%=link_to "Excluir", produto_path(produto), data:{turbo_method: :delete}%>
        </div>
    <%end%>

</div>
