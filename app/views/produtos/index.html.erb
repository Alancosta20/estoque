<div class= "outer-container">
    <div class= "used-flex">
        <h1 class= "titulo-formulario">Meus Produtos</h1>
        <%=link_to "+ Novo Produto", new_produto_path, class: "botao-enviar"%>
    </div>

    <%@produtos.each do |produto|%>
        <div class = "container-produtos">
            <h3>
               <%=produto.nome%>
            </h3>
            <div>
                <%=link_to "Editar", edit_produto_path(produto), class: "link" %>
                <%=link_to "Excluir", produto_path(produto), data:{turbo_method: :delete}, class:"link"%>
            </div>
        </div>
    <%end%>

</div>
